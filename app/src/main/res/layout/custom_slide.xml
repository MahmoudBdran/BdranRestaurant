<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/i1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:id="@+id/slide_image"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FOOD"
        android:layout_below="@+id/slide_image"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-light"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:id="@+id/slide_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can request any order any time with a best delivery in EGYPT. there are more gifts"
        android:layout_below="@+id/slide_title"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-light"
        android:textSize="25dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="#8C8B8B"
        android:id="@+id/slide_body"
        />




</RelativeLayout>